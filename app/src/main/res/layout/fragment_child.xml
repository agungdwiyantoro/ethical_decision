<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

<!--    <TextView
        android:id="@+id/textViewPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="50sp" />
-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pertanyaan"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/TransLightSteelBlue"
               />
        </TableRow>


        <TableRow

            android:id="@+id/row_seekbar_teonom"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">


            <SeekBar
                android:id="@+id/seekbar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="10"
                android:progress="5"
                android:progressDrawable="@drawable/progress_color"
                android:thumb="@drawable/triangle" />

        </TableRow>



        <TableRow

            android:id="@+id/row_button_teonom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
          >


            <Button
                android:id="@+id/left_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/teonom_button"
                android:text="@string/teonom_button"
                />
            <Button
                android:id="@+id/right_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/teonom_button_right"
                android:text="@string/teonom_button_right"
                android:textColor="@color/white"
                />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_seekbar">

            <TextView
                android:id="@+id/tv_label_right"
                android:layout_width="0px"
                android:layout_weight="1"
                android:gravity="start"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_label_left"
                android:layout_width="0px"
                android:layout_weight="1"
                android:gravity="end"
                android:textStyle="bold"
               />
        </TableRow>



    </TableLayout>


</LinearLayout>