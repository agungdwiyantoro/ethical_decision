<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/bar_approaches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybar"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_weight="0">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/backicon" />

        <TextView
            android:id="@+id/tv_bar_approach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/DarkCyan"
            android:theme="@style/Approaches"
            android:text="@string/Xanswser"/>

    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bar_approaches"
        android:layout_weight="2"

        android:layout_marginBottom="30dp">


        <TableLayout
            android:id="@+id/table_layout_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">



        </TableLayout>


    </ScrollView>



</LinearLayout>

