<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >

            <gradient
                android:angle="270"
                android:endColor="@color/green"
                android:startColor="@color/PaleGreen" />

            <size
                android:height="80dp"
                android:width="20dp" />

            <corners
                android:bottomRightRadius="10dp"  android:topRightRadius="10dp"/>
            <padding
                android:left="20dp"
                android:right="20dp"
               />

        </shape>
    </item>

    <item  android:state_enabled="false">
        <shape
            android:shape="rectangle" >

            <gradient
                android:angle="270"
                android:endColor="@color/gray"
                android:startColor="@color/gray" />

            <size
                android:height="80dp"
                android:width="20dp" />
            <corners
                android:bottomRightRadius="10dp"  android:topRightRadius="10dp"/>
            <padding
                android:top="20dp"
                android:bottom="20dp" />

        </shape>

    </item>


    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >

            <gradient
                android:angle="270"
                android:endColor="@color/green"
                android:startColor="@color/PaleGreen" />

            <size
                android:height="80dp"
                android:width="20dp" />

            <corners
                android:bottomRightRadius="10dp"  android:topRightRadius="10dp"/>
            <padding
                android:top="20dp"
                android:bottom="20dp" />

        </shape>

    </item>
</selector>
